<Window x:Class="TeacherFacilitationSystem.addStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="addStudent" Height="400" Width="400">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" Margin="38,39,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="38,91,0,0" VerticalAlignment="Top"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="38,139,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="nameBox" HorizontalAlignment="Left" Height="23" Margin="128,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="pwdBox" HorizontalAlignment="Left" Height="23" Margin="128,91,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="emailBox" HorizontalAlignment="Left" Height="23" Margin="128,143,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button Content="ADD" HorizontalAlignment="Left" Margin="207,194,0,0" VerticalAlignment="Top" Width="75" Click="addStudent1"/>
    </Grid>
</Window>
