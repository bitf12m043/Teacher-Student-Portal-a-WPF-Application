<Window x:Class="TeacherFacilitationSystem.Reports"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reports" Height="300" Width="700">
    <Grid>
        <DataGrid x:Name="myGrid" AutoGenerateColumns="False" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="259" Width="682">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Width="100" Binding="{Binding qId}"/>
                <DataGridTextColumn Header="QID" Width="100" Binding="{Binding statement}"/>
                <DataGridTextColumn Header="Total Question" Width="100" Binding="{Binding optionA}"/>
                <DataGridTextColumn Header="Correct Answer" Width="100" Binding="{Binding optionB}"/>
                <DataGridTextColumn Header="Wrong Answer" Width="100" Binding="{Binding optionC}"/>
                <DataGridTextColumn Header="Timing" Width="100" Binding="{Binding optionD}"/>
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
