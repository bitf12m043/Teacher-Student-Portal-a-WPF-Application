<Window x:Class="TeacherFacilitationSystem.viewAnnouncement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="viewAnnouncement" Height="300" Width="300">
    <Grid>
        <ComboBox x:Name="titleOfAnouncement" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="272"/>
        <Button Content="Open" HorizontalAlignment="Left" Margin="207,53,0,0" VerticalAlignment="Top" Width="75" Click="openAnnouncement"/>
        <TextBox x:Name="anounce" HorizontalAlignment="Left" Height="178" Margin="10,81,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="272"/>

    </Grid>
</Window>
