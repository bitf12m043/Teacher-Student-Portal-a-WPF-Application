<Window x:Class="TeacherFacilitationSystem.adminProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="adminProfile" Height="400" Width="400">
    <Grid>
        
        <Label HorizontalAlignment="Center" FontWeight="Bold" Margin="20">Admin's Profile</Label>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Grid.Row="0" MinHeight="20" MaxHeight="40" MinWidth="60" MaxWidth="100" Click="add" >Add Student</Button>
            <Button Grid.Column="1" Grid.Row="0" MinHeight="20" MaxHeight="40" MinWidth="60" MaxWidth="100" Click="changePwd" >Change Password</Button>
            <Button Grid.Column="0" Grid.Row="1" MinHeight="20" MaxHeight="40" MinWidth="60" MaxWidth="100" Click="updateDetails" >Update Details</Button>
            <Button Grid.Column="1" Grid.Row="1" MinHeight="20" MaxHeight="40" MinWidth="60" MaxWidth="90" Click="view" >View Details</Button>
        </Grid>

    </Grid>
</Window>
