<Window x:Class="TeacherFacilitationSystem.quizManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="quizManagement" Height="400" Width="400">
    <Grid>
        <Label HorizontalAlignment="Center" FontWeight="Bold" Margin="20">Quiz Management</Label>

        
           

            <Button  MinHeight="20" MaxHeight="40" MinWidth="60" MaxWidth="90" Click="addQuestions" Margin="0,-90,0,90" >Add Quiz</Button>
            <Button  MinHeight="20" MaxHeight="40" MinWidth="60" MaxWidth="90" Click="deleteQuiz" Margin="0,-20,0,20" >Delete Quiz</Button>
            
            <Button MinHeight="20" MaxHeight="40" MinWidth="60" MaxWidth="90" Click="ViewData" Margin="0,55,0,-55" RenderTransformOrigin="0.52,0.389" >View All Quizes</Button>
     
    </Grid>
</Window>
