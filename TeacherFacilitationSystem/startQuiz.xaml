<Window x:Class="TeacherFacilitationSystem.startQuiz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="startQuiz" Height="400" Width="400">
    <Grid>
        <Label Content="Quiz" HorizontalAlignment="Left" Margin="172,37,0,0" VerticalAlignment="Top"/>
        <Label x:Name="qNo" Content="Q #" HorizontalAlignment="Left" Margin="26,78,0,0" VerticalAlignment="Top"/>
        <Label x:Name="statement" Content="This is a statement" HorizontalAlignment="Left" Margin="56,109,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.351,-0.91"/>
        <RadioButton x:Name="opA" Content="RadioButton" HorizontalAlignment="Left" Margin="26,203,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="opB" Content="RadioButton" HorizontalAlignment="Left" Margin="245,203,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="opC" Content="RadioButton" HorizontalAlignment="Left" Margin="26,244,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="opD" Content="RadioButton" HorizontalAlignment="Left" Margin="245,244,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.069,0.739"/>
        <Button Content="Result" HorizontalAlignment="Left" Margin="172,302,0,0" VerticalAlignment="Top" Width="75" Click="result1"/>
        <Button Content="Next" HorizontalAlignment="Left" Margin="295,302,0,0" VerticalAlignment="Top" Width="75" Click="nextQuestion"/>

    </Grid>
</Window>
