<Window x:Class="TeacherFacilitationSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label MinHeight="100" MaxHeight="100" MinWidth="100" MaxWidth="300">User Name</Label>
        <TextBox x:Name="username" HorizontalAlignment="Left" Height="23" Margin="211,115,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label MinHeight="100" MaxHeight="200" MinWidth="100" MaxWidth="300" Margin="15,170,10,10">Password</Label>

        <Label MinHeight="100" MaxHeight="200" MinWidth="100" MaxWidth="300" Margin="40,213,10,10">Role</Label>
        <RadioButton   x:Name="teacher" MinHeight="100" MaxHeight="200" MinWidth="100" MaxWidth="300" Margin="190,220,10,10" IsChecked="True">Teacher</RadioButton>
        <RadioButton x:Name="student" MinHeight="100"  MaxHeight="200" MinWidth="100" MaxWidth="300" Margin="280,220,10,10">Student</RadioButton>
        <Button x:Name="login" HorizontalAlignment="Center" MinHeight="10" MaxHeight="50" Background="Gray"  MinWidth="100" MaxWidth="500" Margin="211,242,206,-1" FontWeight="Bold" Click="CheckUser" >Login</Button>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="210,170,0,0" VerticalAlignment="Top" MinWidth="120" MaxWidth="150" MinHeight="20" MaxHeight="25"/>
    </Grid>
</Window>
