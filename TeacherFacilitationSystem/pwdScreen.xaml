<Window x:Class="TeacherFacilitationSystem.pwdScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="pwdScreen" Height="300" Width="300">
    <Grid>
        <Label Content="Enter new password" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="newpwd" HorizontalAlignment="Left" Width="178" Margin="75,89,0,0" VerticalAlignment="Top" Height="32" RenderTransformOrigin="0.5,0.5">
            
        </PasswordBox>
        <Button Content="Change Password" HorizontalAlignment="Left" Margin="141,152,0,0" VerticalAlignment="Top" Width="112" Click="changepwd"/>

    </Grid>
</Window>
