<Window x:Class="TeacherFacilitationSystem.updater"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="updater" Height="300" Width="300">
    <Grid>
        <Label Content="Enter new name" HorizontalAlignment="Left" Margin="15,65,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.348,1.042"/>
        <Label Content="Enter new Password" HorizontalAlignment="Left" Margin="15,96,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.348,1.042"/>
        <Label Content="Enter new Email" HorizontalAlignment="Left" Margin="15,122,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.348,1.042"/>
        <TextBox x:Name="newName" HorizontalAlignment="Left" Height="23" Margin="128,69,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="newPwd" HorizontalAlignment="Left" Height="23" Margin="128,100,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="newEmail" HorizontalAlignment="Left" Height="23" Margin="128,127,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button Content="Update" HorizontalAlignment="Left" Margin="194,167,0,0" VerticalAlignment="Top" Width="75" Click="updateinfo"/>


    </Grid>
</Window>
